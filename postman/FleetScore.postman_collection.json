          "event": [ { "listen": "test", "script": { "type": "text/javascript", "exec": [
            "pm.test('Forgot password returns 200', function () { pm.response.to.have.status(200); });",
            "var j=pm.response.json(); pm.test('Response contains message', function () { pm.expect(j.message).to.be.a('string'); });",
            "// Token is delivered via email/logs; set {{resetToken}} manually"
          ] } } ]
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Content-Type", "value": "application/json" },
              { "key": "Api-Version", "value": "{{apiVersion}}" }
